@model db.bks_BookStockDetail

@{
    ViewBag.Title = "入库明细表新增";
    //wzrui 2020-02-19
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="dialog">
        <div class="editor-label">
            @Html.LabelFor(model => model.stockCode)
        </div>
        <div class="editor-field read">
            @Html.EditorFor(model => model.stockCode)
            @Html.ValidationMessageFor(model => model.stockCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.bookCode)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.bookCode, db.bll.bks_Book.bindDdl(), new { @class = "inputSelect" })
            @Html.ValidationMessageFor(model => model.bookCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.quantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.quantity)
            @Html.ValidationMessageFor(model => model.quantity)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.price)
            @Html.ValidationMessageFor(model => model.price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.remark)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.remark)
            @Html.ValidationMessageFor(model => model.remark)
        </div>

        <p class="button">
            <a class="billSave opSave">保存</a>
            <a class="opClose">关闭</a>
        </p>
    </div>
}